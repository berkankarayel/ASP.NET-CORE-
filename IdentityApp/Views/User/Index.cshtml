@model IEnumerable<IdentityApp.Models.AppUser>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
          
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Ad Soyad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
           
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user.FullName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
