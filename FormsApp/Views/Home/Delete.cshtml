@model FormsApp.Models.Product

<h2>Ürün Sil</h2>

<h4>Bu ürünü silmek istediğinize emin misiniz?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Adı</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Fiyat</dt>
        <dd class="col-sm-10">@Model.Price ₺</dd>

        <dt class="col-sm-2">Kategori</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>

        <dt class="col-sm-2">Aktif mi?</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Evet" : "Hayır")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
