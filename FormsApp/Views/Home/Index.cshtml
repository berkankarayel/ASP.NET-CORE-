@model FormsApp.Models.ProductViewModel

<div class="row">
    <!-- Sol tarafta kategori menüsü -->
    <div class="col-3">
        <h4>Kategoriler</h4>
        <ul class="list-group">
            <!-- Hepsi seçeneği -->
            <li class="list-group-item @(Model.SelectedCategory.HasValue ? "" : "active")">
               <a asp-action="Index" asp-route-id="">Hepsi</a>
            </li>
            @foreach (var category in Model.Categories)
            {
                <li class="list-group-item @(Model.SelectedCategory == category.Id ? "active" : "")">
                    <a asp-action="Index" asp-route-id="@category.Id">@category.Name</a>
                </li>
            }
        </ul>
    </div>

    <!-- Sağ tarafta ürün listesi -->
    <div class="col-9">
        <h2>Product List</h2>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Resim</th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Aktif mi?</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.Image))
                            {
                                <img src="@product.Image" width="100" />
                            }
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Price ₺</td>
                        <td>@(product.IsActive ? "Evet" : "Hayır")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">Detay</a>
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="mb-3">
            <a asp-action="Create" class="btn btn-success">+ Yeni Ürün Ekle</a>
        </div>
    </div>
</div>
