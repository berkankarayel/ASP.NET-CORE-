@model EntityFramework.Models.Entities.Kurs

<h2>Kurs Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="KursId" />

    <div class="form-group">
        <label asp-for="Baslik"></label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OgretmenId">Öğretmen</label>
        <select asp-for="OgretmenId"
                asp-items="ViewBag.Ogretmenler"
                class="form-control">
            <option value="">-- Öğretmen Seç --</option>
        </select>
        <span asp-validation-for="OgretmenId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
