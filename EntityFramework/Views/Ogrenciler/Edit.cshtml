@model EntityFramework.Models.Entities.Ogrenci

<h2>Öğrenci Güncelle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OgrenciId" />

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="OgrenciAd" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="OgrenciSoyad" class="form-control" />
    </div>
    <div class="form-group">
        <label>E-posta</label>
        <input asp-for="Eposta" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
