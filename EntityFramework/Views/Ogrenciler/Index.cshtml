@model IEnumerable<EntityFramework.Models.Entities.Ogrenci>

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center bg-dark text-white">
        <h5 class="mb-0">Öğrencileri Yönet</h5>
        <div>
            <button class="btn btn-sm btn-danger me-2">
                <i class="bi bi-trash"></i> Toplu Sil
            </button>
            <a asp-action="Create" class="btn btn-sm btn-success">
                <i class="bi bi-person-plus"></i> Yeni Öğrenci
            </a>
        </div>
    </div>

    <div class="card-body">
      <table class="table table-sm table-hover table-bordered align-middle">

            <thead class="table-light">
                <tr>
                    <th><input type="checkbox" /></th>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>E-posta</th>
                    <th>Telefon</th>
                    <th style="width:150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><input type="checkbox" /></td>
                    <td>@item.OgrenciId</td>
                    <td>@item.OgrenciAd</td>
                    <td>@item.OgrenciSoyad</td>
                    <td>@item.Eposta</td>
                    <td>@item.Telefon</td>
                <td class="text-center">
    <div class="btn-group" role="group">
        <a asp-action="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-outline-warning" title="Düzenle">
            <i class="bi bi-pencil-square"></i>
        </a>
        <a asp-action="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-outline-danger" title="Sil">
            <i class="bi bi-trash"></i>
        </a>
        <a asp-action="Details" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-outline-info" title="Detay">
            <i class="bi bi-info-circle"></i>
        </a>
        <a asp-action="KursaKaydet" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-outline-primary" title="Kursa Kaydet">
            <i class="bi bi-journal-plus"></i>
        </a>
    </div>
</td>

                </tr>
            }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <small class="text-muted">Showing @Model.Count() of @Model.Count()</small>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled"><a class="page-link">Previous</a></li>
                    <li class="page-item active"><a class="page-link">1</a></li>
                    <li class="page-item"><a class="page-link">2</a></li>
                    <li class="page-item"><a class="page-link">3</a></li>
                    <li class="page-item"><a class="page-link">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
