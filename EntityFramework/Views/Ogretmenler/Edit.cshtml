@model EntityFramework.Models.Entities.Ogretmen

<h2>Öğretmen Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OgretmenId" />

    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="form-group">
        <label>E-posta</label>
        <input asp-for="Eposta" class="form-control" />
    </div>
    <div class="form-group">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>
    <div class="form-group">
        <label>Başlama Tarihi</label>
        <input asp-for="BaslamaTarihi" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
