@model EntityFramework.Models.Entities.Ogretmen

<h2>Öğretmen Sil</h2>

<h4>Bu öğretmeni silmek istediğinizden emin misiniz?</h4>

<div>
    <p><strong>Ad:</strong> @Model.Ad</p>
    <p><strong>Soyad:</strong> @Model.Soyad</p>
    <p><strong>E-posta:</strong> @Model.Eposta</p>
    <p><strong>Telefon:</strong> @Model.Telefon</p>
    <p><strong>Başlama Tarihi:</strong> @Model.BaslamaTarihi.ToShortDateString()</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="OgretmenId" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
