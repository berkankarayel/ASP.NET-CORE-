@model MeetingApp.Models.Participant

@{
    ViewData["Title"] = "Katılımcı Detayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h3 class="card-title">Başvuru Detayı</h3>
                    <p><strong>İsim:</strong> @Model.Name</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Telefon:</strong> @Model.Phone</p>
                    <p>
                        <span class="badge @(Model.WillAttend == true ? "bg-success" : "bg-danger")">
                            @(Model.WillAttend == true ? "Katılıyor" : "Katılmıyor")
                        </span>
                    </p>

                    <a asp-action="Participants" class="btn btn-secondary mt-3">Katılımcı Listesi</a>
                </div>
            </div>
        </div>
    </div>
</div>
