@model List<MvcApp.Models.Course>
@{
    ViewData["Title"] = "Kurs Listesi";
}

<div class="container mt-4">
    <h2 class="mb-4">Kurs Listesi</h2>
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4 d-flex">
                <div class="card h-100 flex-fill d-flex flex-column">
                    <img src="~/img/@course.Image" class="card-img-top" alt="@course.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <div class="mt-auto">
                            <a href="#" class="btn btn-primary">Detay</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

